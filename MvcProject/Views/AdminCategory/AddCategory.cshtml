@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Ekleme Sayfası</h1>

<br />
<!--html.beginform ekleme ve güncellemelerde kullanılan htlmhelperdır.-->
<!--ActionAdı,contoller adı-->
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(t => t.CategoryName, new { @class = "form-control" })

        <!--Validationları göstermek için-->
        @Html.ValidationMessageFor(t => t.CategoryName)
        <br /><br />
        @Html.Label("Açıklama Yazınız")
        @Html.TextAreaFor(t => t.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.CategoryDescription)
        <br /><br />
        <button class="btn btn-success">Kaydet</button>
    </div>
}

